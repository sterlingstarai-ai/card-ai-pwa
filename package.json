{
  "name": "card-ai",
  "version": "1.0.2",
  "description": "Card AI - 신용카드 혜택 추천 앱",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "validate": "node scripts/validate-data.js",
    "secrets:check": "node scripts/secrets-check.js",
    "test:e2e": "playwright test",
    "ci": "npm run lint && npm run validate && npm run build && npm run secrets:check",
    "cap:sync": "npm run build && npx cap sync",
    "cap:ios": "npm run cap:sync && npx cap open ios",
    "cap:android": "npm run cap:sync && npx cap open android",
    "cap:build:ios": "npm run build && npx cap sync ios",
    "cap:build:android": "npm run build && npx cap sync android",
    "data:scrape": "node scripts/ingest/01_scrape_card_pages.js",
    "data:extract": "node scripts/ingest/02_extract_benefits_openai.js",
    "data:merge": "node scripts/ingest/03_merge_to_src_data.js"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/camera": "^8.0.0",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/geolocation": "^8.0.0",
    "@capacitor/ios": "^8.0.1",
    "@sentry/react": "^10.33.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "openai": "^4.77.0",
    "prettier": "^3.7.4",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.4"
  }
}
