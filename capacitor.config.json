{
  "appId": "com.sterlingstarai.cardai",
  "appName": "Card AI",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https",
    "iosScheme": "https",
    "hostname": "card-ai-pi.vercel.app",
    "allowNavigation": ["dapi.kakao.com", "*.kakao.com", "*.daumcdn.net"]
  },
  "plugins": {
    "Camera": {
      "promptText": "카드 스캔을 위해 카메라 접근이 필요합니다."
    },
    "Geolocation": {
      "enabled": true
    }
  },
  "ios": {
    "contentInset": "automatic",
    "allowsLinkPreview": false,
    "scrollEnabled": true,
    "limitsNavigationsToAppBoundDomains": false
  },
  "android": {
    "allowMixedContent": false
  }
}
